<Window x:Class="MyInstrument.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MyInstrument"
        Title="MainWindow"
        Width="1920"
        Height="1080"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        WindowState="Maximized"
        WindowStyle="None"
        mc:Ignorable="d">

    <!--#region Styles-->
    <Window.Resources>
        <!--Button style-->
        <Style TargetType="Button" x:Key="RoundButton">
            <Style.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="25" />
                </Style>
            </Style.Resources>
        </Style>
        <!--End Button style-->

        <!--Separator (Vertical Border) Style-->
        <Style x:Key="SeparatorStyleVertical"
           TargetType="{x:Type Border}">
            <Setter Property="BorderThickness" Value="0,0,0,0"/>
            <Setter Property="BorderBrush" Value="#FFC5C5C5"/>
            <Setter Property="Margin" Value="0,0,0,0"/>
            <Setter Property="Width" Value="4"/>
            <Setter Property="Height" Value="auto"/>
            <Setter Property="Background" Value="Black"/>
        </Style>
        <!--End Separator (Vertical Border) Style-->

        <!--Separator (Horizontal Border) Style-->
        <Style x:Key="SeparatorStyleHorizontal"
           TargetType="{x:Type Border}">
            <Setter Property="BorderThickness" Value="0,0,0,0"/>
            <Setter Property="BorderBrush" Value="#FFC5C5C5"/>
            <Setter Property="Margin" Value="0,0,0,0"/>
            <Setter Property="Width" Value="320"/>
            <Setter Property="Height" Value="2"/>
            <Setter Property="Background" Value="Black"/>
            <Setter Property="Opacity" Value="0.5" />
        </Style>
        <!--End Separator (Horizontal Border) Style-->

        <!--Combobox style-->
        <Style x:Key="ComboboxButtonStyle" TargetType="{x:Type ToggleButton}">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type ToggleButton}">
                        <Border   
                             Background="White"
                             x:Name="border"   
                             CornerRadius="0,5,5,0"   
                             BorderThickness="0,2,2,2"  
                             BorderBrush="Black">
                            <ContentPresenter />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="ComboboxTextBoxStyle" TargetType="{x:Type TextBox}">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type TextBox}">
                        <Grid>
                            <Border CornerRadius="5,0,0,5"  
                                BorderThickness="2,2,2,2"  
                                Background="{TemplateBinding Background}"  
                                BorderBrush="Black">
                                <ScrollViewer x:Name="PART_ContentHost"/>
                            </Border>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="ComboboxStyle" TargetType="{x:Type ComboBox}">
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type ComboBox}">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition/>
                                <ColumnDefinition MaxWidth="18"/>
                            </Grid.ColumnDefinitions>
                            <TextBox Name="PART_EditableTextBox"  
                                Style="{StaticResource ComboboxTextBoxStyle}"  
                                Padding="5,0,0,0"  
                                Height="{TemplateBinding Height}"
                                IsReadOnly="True"/>
                            <ToggleButton Grid.Column="1" Margin="0"  
                                   Height="{TemplateBinding Height}"  
                                   Style="{StaticResource ComboboxButtonStyle}"  
                                   Focusable="False"  
                                   IsChecked="{Binding Path=IsDropDownOpen, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}"  
                                   ClickMode="Press">
                                <Path Grid.Column="1"  
                                      HorizontalAlignment="Center"  
                                      VerticalAlignment="Center"  
                                      Data="M 0 0 L 4 4 L 8 0 Z"  
                                      Fill="Black" />
                            </ToggleButton>
                            <ContentPresenter Name="ContentSite"  
                                Content="{TemplateBinding SelectionBoxItem}"  
                                ContentTemplate="{TemplateBinding SelectionBoxItemTemplate}"  
                                ContentTemplateSelector="{TemplateBinding ItemTemplateSelector}"  
                                VerticalAlignment="Center"  
                                HorizontalAlignment="Left"                                 
                                Margin="5,0,0,0"/>
                            <Popup Name="Popup"  
                               Placement="Bottom"  
                               IsOpen="{TemplateBinding IsDropDownOpen}"  
                               Focusable="False"  
                               PopupAnimation="Slide">
                                <Grid Name="DropDown"  
                                 SnapsToDevicePixels="True"          
                                 MinWidth="{TemplateBinding ActualWidth}"  
                                 MaxHeight="{TemplateBinding MaxDropDownHeight}">
                                    <Border   
                                   x:Name="DropDownBorder"  
                                   BorderThickness="2"  
                                   CornerRadius="5"  
                                   BorderBrush="Black"
                                   Background="White"/>
                                    <ScrollViewer Margin="4,6,4,6" SnapsToDevicePixels="True">
                                        <StackPanel IsItemsHost="True" KeyboardNavigation.DirectionalNavigation="Contained" />
                                    </ScrollViewer>
                                </Grid>
                            </Popup>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <!--Combobox style-->
    </Window.Resources>
    <!--#endregion End Styles-->

    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/Images/Backgrounds/Main2.jpg" ></ImageBrush>
        </Grid.Background>

        <Grid.RowDefinitions>
            <RowDefinition Height="70"></RowDefinition>
            <RowDefinition Height="1*"></RowDefinition>
        </Grid.RowDefinitions>

        <!--#region Top Bar (Row 0)-->
        <StackPanel Grid.Row="0"  Orientation="Horizontal"  
                    HorizontalAlignment="Center" VerticalAlignment="Center" 
                    Width="auto" Margin="5,5,5,0">

            <!--Left Top Bar Embellishment-->
            <Image Source="Images/Embellishments/LeftRight_TopBar.png"
                   Margin="0,5,10,5"
                   Width="auto"
                ></Image>
            <!--End Left Top Bar Embellishment-->
            <Border          
            CornerRadius="8"
            Width="auto"           
            VerticalAlignment="Top"
            BorderBrush="Black"
            BorderThickness="4">
                <Border.Background>
                    <ImageBrush ImageSource="/Images/Backgrounds/TopBar2.jpg" TileMode="Tile" />
                </Border.Background>

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="350" />
                        <ColumnDefinition Width="350" />
                        <ColumnDefinition Width="350" />
                    </Grid.ColumnDefinitions>

                    <!--Exit and Start buttons-->
                    <StackPanel Grid.Column="0" Orientation="Horizontal" 
                                VerticalAlignment="Center">

                        <!--Exit button-->
                        <Button Style="{DynamicResource RoundButton}"
                            Name="btnExit"
                            Width="45"
                            Background="Transparent"
                            BorderBrush="Transparent"
                            Margin="5,5,0,5"
                            Click="btnExit_Click">
                            <Image Source="Images/Icons/Exit.png"
                                Width="40"/>
                        </Button>
                        <Label
                            Name="btnExitLabel"
                            FontFamily="Papyrus"
                            FontWeight="Bold"
                            FontSize="28"
                            Foreground="White">Exit</Label>
                        <!--End Exit button-->

                        <!--Start button-->
                        <Button Style="{DynamicResource RoundButton}"
                            x:Name="btnStart"
                            Width="45"
                            Background="Transparent"
                            BorderBrush="Transparent"
                            Margin="10,5,0,5"
                            Click="btnStart_Click">
                            <Image Name="btnStartImage" Source="Images/Icons/Start.png"
                                Width="40"/>
                        </Button>
                        <Label
                            Name ="btnStartLabel"
                            Margin="0,0,10,0"
                            FontFamily="Papyrus"
                            FontWeight="Bold"
                            FontSize="28"
                            Foreground="White">Start</Label>
                        <!--End Start button-->
                    </StackPanel>

                    <Border Style="{StaticResource SeparatorStyleVertical}"
                        HorizontalAlignment="Right"
                        Grid.Column="0"/>
                    <!--End Exit and Start buttons-->

                    <!--Instrument Settings button-->
                    <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                        <Button Style="{DynamicResource RoundButton}"
                            Name="btnInstrumentSettings"
                            Width="45"
                            Background="Transparent"
                            BorderBrush="Transparent"
                            Margin="5,5,0,5"
                            Click="btnInstrumentSettings_Click"
                            MouseEnter="eyeGazeHandler">
                            <Image Name="btnInstrumentSettingImage"
                                Source="Images/Icons/Settings.png"
                                Width="40"/>
                        </Button>
                        <Label Name="btnInstrumentSettingLabel"
                            Margin="0,0,10,0"
                            FontFamily="Papyrus"
                            FontWeight="Bold"
                            FontSize="28"
                            Foreground="White">Instrument Settings</Label>
                    </StackPanel>

                    <Border Style="{StaticResource SeparatorStyleVertical}"
                        HorizontalAlignment="Right"
                        Grid.Column="1"/>
                    <!--End Instrument Settings button-->
                   
                    <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="0,0,15,0">

                        <!--Eye Button-->
                        <Button Style="{DynamicResource RoundButton}"                      
                            Name="btnCtrlEye"
                            Width="45"
                            Height="45"
                            Margin ="5,0,0,0"
                            VerticalAlignment="Stretch"
                            BorderBrush="Black"
                            BorderThickness="3"
                            Click="btnCtrlEye_Click"
                            MouseEnter="eyeGazeHandler">
                            <Button.Background>
                                <ImageBrush x:Name="btnEyeImage"
                                ImageSource="Images/Backgrounds/Buttons.jpeg"
                                Stretch="None"
                                TileMode="Tile" />
                            </Button.Background>
                            <Image Source="Images/Icons/Eye.png"
                                Margin="0,0,0,0"
                                Width="auto"
                                Height="35" 
                                VerticalAlignment="Center"/>
                        </Button>

                        <!--End Eye Buttons-->

                        <!--Key Name-->
                        <Button Style="{DynamicResource RoundButton}"                      
                            Name="btnCtrlKeyName"
                            Width="45"
                            Height="45"
                            Margin ="15,0,0,0"
                            VerticalAlignment="Stretch"
                            BorderBrush="Black"
                            BorderThickness="3"
                            Click="btnCtrlKeyName_Click"
                            MouseEnter="eyeGazeHandler">
                            <Button.Background>
                                <ImageBrush x:Name="btnKeyNameImage"
                                ImageSource="Images/Backgrounds/Buttons.jpeg"
                                Stretch="None"
                                TileMode="Tile" />
                            </Button.Background>
                            <Image Source="Images/Icons/KeyName.png"
                                Margin="0,0,0,0"
                                Width="auto"
                                Height="27" 
                                VerticalAlignment="Center"/>
                        </Button>
                        <!--End Key Name-->

                        <!--Note Visualizer-->
                        <StackPanel Margin="15,0,0,0" Orientation="Horizontal" 
                        VerticalAlignment="Center"
                        HorizontalAlignment="Center">
                            <Border
                            Width="65"
                            Height="40"
                            BorderBrush="Black"
                            BorderThickness="4,4,2,4"
                            CornerRadius="5,0,0,5">
                                <Border.Background>
                                    <ImageBrush ImageSource="Images/Backgrounds/Buttons.jpeg"/>
                                </Border.Background>
                                <TextBlock
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                x:Name="txtPitch"
                                FontFamily="Digital-7 Italic"
                                FontSize="25"
                                Text="_"
                                Foreground="White"
                                TextAlignment="Center" />
                            </Border>
                            <Border
                            Width="65"
                            Height="40"
                            BorderBrush="Black"
                            BorderThickness="2,4,2,4">
                                <Border.Background>
                                    <ImageBrush ImageSource="Images/Backgrounds/Buttons.jpeg"/>
                                </Border.Background>
                                <TextBlock
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                x:Name="txtNoteName"
                                FontFamily="Digital-7 Italic"
                                FontSize="25"
                                Text="_"
                                Foreground="White"
                                TextAlignment="Center" />
                            </Border>
                            <Border
                                Width="65"
                                Height="40"
                                BorderBrush="Black"
                                BorderThickness="2,4,4,4" 
                                CornerRadius="0,5,5,0">
                                <Border.Background>
                                    <ImageBrush ImageSource="Images/Backgrounds/Buttons.jpeg"/>
                                </Border.Background>
                                <TextBlock
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    x:Name="txtVelocityMouth"
                                    FontFamily="Digital-7 Italic"
                                    FontSize="25"
                                    Foreground="White"
                                    Text="_"
                                    TextAlignment="Center" />
                            </Border>
                        </StackPanel>
                        <!--End Note Visualizer-->                        
                    </StackPanel>
                </Grid>

            </Border>
            
            <!--Right Top Bar Embellishment-->
            <Image Source="Images/Embellishments/LeftRight_TopBar.png"
                    Margin="10,5,0,5"
                    Width="auto"
                   HorizontalAlignment="Right"
                   VerticalAlignment="Top"
                ></Image>
            <!--End Right Top Bar Embellishment-->
            
        </StackPanel>
        <!--#endregion End Top Bar (Row 0)-->

        <!--#region MyInstrument (Row 1)-->
        <Border Grid.Row="1" VerticalAlignment="Stretch" 
                HorizontalAlignment="Stretch" Margin="5,0,5,5" 
                Width="Auto" Height="Auto" BorderThickness="4" 
                CornerRadius="8" BorderBrush="Black">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="12*" />
                </Grid.RowDefinitions>
                <ScrollViewer x:Name="scrlMyInstrument" VerticalAlignment="Stretch" 
                                        HorizontalAlignment="Stretch" Margin="0,0,0,0" 
                                        Width="Auto" Height="Auto" Grid.Row="0"
                                        HorizontalScrollBarVisibility="Hidden" 
                                        VerticalScrollBarVisibility="Hidden">

                    <!--Canvas allows to place elements by coordinates-->
                    <Canvas x:Name="canvasMyInstrument" VerticalAlignment="Stretch" 
                                    HorizontalAlignment="Stretch" Margin="0,0,0,0"
                                    Width="1518" Height="781">
                        <Canvas.Background>
                            <SolidColorBrush Color="Black" Opacity="0.8" />
                        </Canvas.Background>
                    </Canvas>
                </ScrollViewer>
            </Grid>
        </Border>

        <!-- #region MyInstrument's Setting_1 Window-->
        <Border Name="WindowInstrumentSettings_1" 
            Grid.Row="1"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            CornerRadius="8" 
            Margin="20,20,0,0"
            Width="400"  
            Height="700" 
            BorderBrush="Black"
            BorderThickness="4"
            Visibility="Hidden">

            <Border.Background>
                <ImageBrush ImageSource="/Images/Backgrounds/TopBar2.jpg" TileMode="Tile" />
            </Border.Background>

            <Grid>

                <Grid.RowDefinitions>
                    <RowDefinition Height="1*"></RowDefinition>
                    <RowDefinition Height="1*"></RowDefinition>
                    <RowDefinition Height="1*"></RowDefinition>
                    <RowDefinition Height="1*"></RowDefinition>
                    <RowDefinition Height="1*"></RowDefinition>
                    <RowDefinition Height="1*"></RowDefinition>
                    <RowDefinition Height="1*"></RowDefinition>
                    
                </Grid.RowDefinitions>

                <!--Title-->
                <StackPanel Grid.Row="0"  Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
                    <Label
                        Margin="0,5,0,0"
                        FontFamily="Papyrus"
                        FontWeight="Bold"
                        FontSize="28"
                        HorizontalAlignment="Center"
                        Foreground="White">Main Settings</Label>
                </StackPanel>
                <!--End Title-->

                <Border Style="{StaticResource SeparatorStyleHorizontal}"
                            Grid.Row="0" VerticalAlignment="Bottom"/>
                
                <!--Keyboard and Breath Buttons-->
                <StackPanel Grid.Row="1"  Orientation="Horizontal" VerticalAlignment="Center" 
                            HorizontalAlignment="Center">
                    <!--Keyboard Button-->
                    <Button Style="{DynamicResource RoundButton}"                      
                            Name="btnCtrlKeyboard"
                            Width="50"
                            Height="50"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Stretch"
                            BorderBrush="White"
                            BorderThickness="2"
                            Click="btnCtrlKeyboard_Click"
                            MouseEnter="eyeGazeHandler">
                        <Button.Background>
                            <ImageBrush x:Name="btnKeyboardImage"
                                ImageSource="Images/Backgrounds/Buttons.jpeg"
                                Stretch="None"
                                TileMode="Tile" />
                        </Button.Background>
                    </Button>
                    <Image Source="Images/Icons/Keyboard.png"
                                Margin="10,0,35,0"
                                Width="65"
                                Height="auto" 
                                VerticalAlignment="Center"/>
                    <!--End Keyboard Button-->

                    <!--Breath Button-->
                    <Button Style="{DynamicResource RoundButton}"                      
                            Name="btnCtrlBreath"
                            Width="50"
                            Height="50"
                            Margin ="0,0,0,0"
                            VerticalAlignment="Stretch"
                            BorderBrush="White"
                            BorderThickness="2"
                            Click="btnCtrlBreath_Click"
                            MouseEnter="eyeGazeHandler">
                        <Button.Background>
                            <ImageBrush x:Name="btnBreathImage"
                                ImageSource="Images/Backgrounds/Buttons.jpeg"
                                Stretch="None"
                                TileMode="Tile" />
                        </Button.Background>
                    </Button>
                    <Image Source="Images/Icons/Breath.png"
                                Margin="10,0,0,0"
                                Width="auto"
                                Height="45" 
                                VerticalAlignment="Center"/>
                    <!--End Breath Button-->                   
                </StackPanel>
                <!--end Keyboard and Breath Buttons-->

                <Border Style="{StaticResource SeparatorStyleHorizontal}"
                            Grid.Row="1"
                            VerticalAlignment="Bottom"/>

                <!--Key-->
                <StackPanel Grid.Row="2"  Orientation="Horizontal" HorizontalAlignment="Center">

                    <Label
                        Margin="55,0,15,0"
                        FontFamily="Papyrus"
                        FontWeight="Bold"
                        FontSize="20"
                        Foreground="White" Height="39">Key</Label>

                    <Button Style="{StaticResource RoundButton}"
                            Name="btnScaleMinus"
                            Margin="0,0,5,0"
                            Width="50"
                            Height="50"
                            BorderBrush="Transparent"
                            BorderThickness="2"
                            Click="btnScaleMinus_Click"
                            MouseEnter="eyeGazeHandler">
                        <Button.Background>
                            <ImageBrush
                                ImageSource="Images/Backgrounds/Buttons.jpeg"
                                Stretch="None"
                                TileMode="Tile" />
                        </Button.Background>

                        <Image Source="Images/Icons/Left_arrow.png"
                                   Width="auto"
                                   Height="auto"/>
                    </Button>
                    <Border
                            Width="100"
                            Height="40"
                            Background="Black"
                            BorderBrush="WhiteSmoke"
                            BorderThickness="2"
                            Visibility="Visible">
                        <TextBlock
                                Name="txtScale"
                                Background="Black"
                                FontFamily="Digital-7 Italic"
                                FontSize="27"
                                Foreground="White"
                                Text=""
                                VerticalAlignment="Center"
                                TextAlignment="Center" />
                    </Border>
                    <Button Style="{StaticResource RoundButton}"
                            Name="btnScalePlus"
                            Margin="5,0,0,0"
                            Width="50"
                            Height="50"
                            BorderBrush="Transparent"
                            BorderThickness="2"
                            Click="btnScalePlus_Click"
                            MouseEnter="eyeGazeHandler">
                        <Button.Background>
                            <ImageBrush
                                ImageSource="Images/Backgrounds/Buttons.jpeg"
                                Stretch="None"
                                TileMode="Tile" />
                        </Button.Background>

                        <Image Source="Images/Icons/Right_arrow.png"
                                   Width="auto"
                                   Height="auto"/>
                    </Button>

                </StackPanel>
                <!--End Key-->

                <Border Style="{StaticResource SeparatorStyleHorizontal}"
                            Grid.Row="2"
                            VerticalAlignment="Bottom"/>

                <StackPanel Grid.Row="3"  Orientation="Horizontal" HorizontalAlignment="Center">

                    <!--Scale-->
                        <Label
                        Margin="40,0,15,0"
                        FontFamily="Papyrus"
                        FontWeight="Bold"
                        FontSize="20"
                        Foreground="White" Height="36">Scale</Label>

                        <Button Style="{StaticResource RoundButton}"
                            Name="btnCodeMinus"
                            Margin="0,0,5,0"
                            Width="50"
                            Height="50"
                            BorderBrush="Transparent"
                            BorderThickness="2"
                            Click="btnCodeMinus_Click"
                            MouseEnter="eyeGazeHandler">
                            <Button.Background>
                                <ImageBrush
                                ImageSource="Images/Backgrounds/Buttons.jpeg"
                                Stretch="None"
                                TileMode="Tile" />
                            </Button.Background>

                            <Image Source="Images/Icons/Left_arrow.png"
                                   Width="auto"
                                   Height="auto"/>
                        </Button>
                        <Border
                            Width="100"
                            Height="40"
                            Background="Black"
                            BorderBrush="WhiteSmoke"
                            BorderThickness="2"
                            Visibility="Visible">
                            <TextBlock
                                Name="txtCode"
                                Background="Black"
                                FontFamily="Digital-7 Italic"
                                FontSize="27"
                                Foreground="White"
                                Text=""
                                VerticalAlignment="Center"
                                TextAlignment="Center" />
                        </Border>
                        <Button Style="{StaticResource RoundButton}"
                            Name="btnCodePlus"
                            Margin="5,0,0,0"
                            Width="50"
                            Height="50"
                            BorderBrush="Transparent"
                            BorderThickness="2"
                            Click="btnCodePlus_Click"
                            MouseEnter="eyeGazeHandler">
                            <Button.Background>
                                <ImageBrush
                                ImageSource="Images/Backgrounds/Buttons.jpeg"
                                Stretch="None"
                                TileMode="Tile" />
                            </Button.Background>

                            <Image Source="Images/Icons/Right_arrow.png"
                                   Width="auto"
                                   Height="auto"/>
                        </Button>
                    <!--End Scale-->
                    </StackPanel>

                <Border Style="{StaticResource SeparatorStyleHorizontal}"
                            Grid.Row="3"
                            VerticalAlignment="Bottom"/>

                <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Center">
                    <!-- Octave-->
                    <Label
                        Margin="40,0,15,0"
                        FontFamily="Papyrus"
                        FontWeight="Bold"
                        FontSize="20"
                        Foreground="White" Height="36">Octave</Label>

                    <Button Style="{StaticResource RoundButton}"
                            Name="btnOctaveMinus"
                            Margin="0,0,5,0"
                            Width="50"
                            Height="50"
                            BorderBrush="Transparent"
                            BorderThickness="2"
                            Click="btnOctaveMinus_Click"
                            MouseEnter="eyeGazeHandler">
                        <Button.Background>
                            <ImageBrush
                                ImageSource="Images/Backgrounds/Buttons.jpeg"
                                Stretch="None"
                                TileMode="Tile" />
                        </Button.Background>

                        <Image Source="Images/Icons/Left_arrow.png"
                                   Width="auto"
                                   Height="auto"/>
                    </Button>
                    <Border
                            Width="100"
                            Height="40"
                            Background="Black"
                            BorderBrush="WhiteSmoke"
                            BorderThickness="2"
                            Visibility="Visible">
                        <TextBlock
                                Name="txtOctave"
                                Background="Black"
                                FontFamily="Digital-7 Italic"
                                FontSize="27"
                                Foreground="White"
                                Text=""
                                VerticalAlignment="Center"
                                TextAlignment="Center" />
                    </Border>
                    <Button Style="{StaticResource RoundButton}"
                            Name="btnOctavePlus"
                            Margin="5,0,15,0"
                            Width="50"
                            Height="50"
                            BorderBrush="Transparent"
                            BorderThickness="2"
                            Click="btnOctavePlus_Click"
                            MouseEnter="eyeGazeHandler">
                        <Button.Background>
                            <ImageBrush
                                ImageSource="Images/Backgrounds/Buttons.jpeg"
                                Stretch="None"
                                TileMode="Tile" />
                        </Button.Background>

                        <Image Source="Images/Icons/Right_arrow.png"
                                   Width="auto"
                                   Height="auto"/>
                    </Button>
                    <!--End Octave-->
                </StackPanel>

                <Border Style="{StaticResource SeparatorStyleHorizontal}"
                            Grid.Row="4"
                            VerticalAlignment="Bottom"/>

                <!--MIDI Port-->

                <StackPanel Grid.Row="5" Orientation="Horizontal" HorizontalAlignment="Center">

                    <Label
                        Margin="0,0,16,0"
                        FontFamily="Papyrus"
                        FontWeight="Bold"
                        FontSize="20"
                        Foreground="White" Height="35">MIDI Port</Label>

                    <StackPanel Margin="0,0,0,0" Orientation="Horizontal" VerticalAlignment="Center">
                        <Button Style="{StaticResource RoundButton}"
                            Name="btnMidiPortMinus"
                            Margin="0,0,5,0"
                            Width="50"
                            Height="50"
                            BorderBrush="Transparent"
                            BorderThickness="2"
                            Click="btnMidiPortMinus_Click"
                            MouseEnter="eyeGazeHandler">
                            <Button.Background>
                                <ImageBrush
                                ImageSource="Images/Backgrounds/Buttons.jpeg"
                                Stretch="None"
                                TileMode="Tile" />
                            </Button.Background>

                            <Image Source="Images/Icons/Left_arrow.png"
                                   Width="auto"
                                   Height="auto"/>
                        </Button>
                        <Border
                            Width="100"
                            Height="40"
                            Background="Black"
                            BorderBrush="WhiteSmoke"
                            BorderThickness="2"
                            Visibility="Visible">
                            <TextBlock
                                Name="txtMidiPort"
                                Background="Black"
                                FontFamily="Digital-7 Italic"
                                FontSize="27"
                                Foreground="LightCoral"
                                Text=""
                                VerticalAlignment="Center"
                                TextAlignment="Center" />
                        </Border>
                        <Button Style="{StaticResource RoundButton}"
                            Name="btnMidiPortPlus"
                            Margin="5,0,0,0"
                            Width="50"
                            Height="50"
                            BorderBrush="Transparent"
                            BorderThickness="2"
                            Click="btnMidiPortPlus_Click"
                            MouseEnter="eyeGazeHandler">
                            <Button.Background>
                                <ImageBrush
